<h1>Log In</h1>

<p style="color: green"><%= flash[:notice] %></p>
<p style="color: red"><%= flash[:warning] %></p>
<p style="color: red"><%= flash[:error] %></p>

<% if current_user -%>
  <p>You are logged in as: <%= current_user.login %> with the roles: <%= current_user.roles.collect{|r| r.title}.join(", ") %></p>
  <p><%= link_to 'Log Out', logout_url %></p>
<% else -%>
<% form_tag session_path do -%>
<p><%= label_tag 'login' %><br />
<%= text_field_tag 'login', @login %></p>

<p><%= label_tag 'password' %><br/>
<%= password_field_tag 'password', nil %></p>

<p><%= label_tag 'remember_me', 'Remember me' %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>

<p><%= submit_tag 'Log in' %></p>
<% end -%>
<% end -%>
